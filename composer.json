{
  "type": "project",
  "name": "matiux/symfony-ddd-boilerplate",
  "license": "proprietary",
  "authors": [
    {
      "name": "Matteo Galacci",
      "email": "m.galacci@gmail.com",
      "homepage": "https://www.matteogalacci.it",
      "role": "Back-end developer"
    }
  ],
  "description": "Boilerplate per modellare in DDD con Symfony 4",
  "require": {
    "php": "^7.3",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "ext-json": "*",
    "matiux/ddd-starter-pack": "^2",
    "symfony/console": "^4.0",
    "symfony/flex": "^1.1",
    "symfony/framework-bundle": "^4.0",
    "symfony/yaml": "^4.0"
  },
  "require-dev": {
    "dama/doctrine-test-bundle": "^5.0",
    "symfony/browser-kit": "*",
    "symfony/css-selector": "*",
    "symfony/debug-bundle": "*",
    "symfony/dotenv": "^4.1",
    "symfony/phpunit-bridge": "^4.1",
    "symfony/profiler-pack": "^1.0"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/App/",
      "ContoBancario\\": "src/ContoBancario/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "replace": {
    "paragonie/random_compat": "*",
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php71": "*",
    "symfony/polyfill-php70": "*",
    "symfony/polyfill-php56": "*"
  },
  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ]
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "extra": {
    "symfony": {
      "allow-contrib": false,
      "require": "4.1.*"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "git@github.com:matiux/ddd-starter-pack.git"
    }
  ]
}
